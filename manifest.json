{
    "name": "Followitch",
    "description": "Extens√£o para pesquisa de canais da Twitch (follow)",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab", "scripting", "identity", "tabs", "storage"
    ],
    "host_permissions": [
        "https://api.twitch.tv/*",
        "http://api.twitch.tv/*",
        "https://id.twitch.tv/*",
        "http://id.twitch.tv/*",
        "https://www.twitch.tv/*",
        "http://www.twitch.tv/*"
    ],
    "icons": {
        "16": "/images/16x16.png",
        "32": "/images/32x32.png",
        "48": "/images/48x48.png",
        "128": "/images/128x128.png"
    },
    "action": {
        "default_popup": "index.html"
    }
}